<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Servlets-->

    <servlet>
        <servlet-name>ConnexionServlet</servlet-name>
        <servlet-class>fr.gestconge.servlet.ConnexionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InscriptionServlet</servlet-name>
        <servlet-class>fr.gestconge.servlet.InscriptionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SuppressionServlet</servlet-name>
        <servlet-class>fr.gestconge.servlet.SuppressionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModificationServlet</servlet-name>
        <servlet-class>fr.gestconge.servlet.ModificationServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DemandeServlet</servlet-name>
        <servlet-class>fr.gestconge.servlet.DemandeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HistoriqueDemandeServlet</servlet-name>
        <servlet-class>fr.gestconge.servlet.HistoriqueDemandeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RhoomServlet</servlet-name>
        <servlet-class>fr.gestconge.servlet.RhoomServlet</servlet-class>
    </servlet>

    <listener>
        <listener-class>fr.gestconge.dao.InitialisationDAOFactory</listener-class>
    </listener>

    <!-- Mapping-->
    <servlet-mapping>
        <servlet-name>ConnexionServlet</servlet-name>
        <url-pattern>/ConnexionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InscriptionServlet</servlet-name>
        <url-pattern>/InscriptionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SuppressionServlet</servlet-name>
        <url-pattern>/SuppressionServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ModificationServlet</servlet-name>
        <url-pattern>/ModificationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DemandeServlet</servlet-name>
        <url-pattern>/DemandeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HistoriqueDemandeServlet</servlet-name>
        <url-pattern>/HistoriqueDemandeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RhoomServlet</servlet-name>
        <url-pattern>/RhoomServlet</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>vues_Standard/VueGlobale_Connexion_Standard.jsp</welcome-file>
    </welcome-file-list>
</web-app>