<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>ConnexionServlet</servlet-name>
        <servlet-class>fr.gestconge.servlets.ConnexionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InscriptionServlet</servlet-name>
        <servlet-class>fr.gestconge.servlets.InscriptionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SuppressionServlet</servlet-name>
        <servlet-class>fr.gestconge.servlets.SuppressionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DemandeServlet</servlet-name>
        <servlet-class>fr.gestconge.servlets.DemandeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HistoriqueDemandeServlet</servlet-name>
        <servlet-class>fr.gestconge.servlets.HistoriqueDemandeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConnexionServlet</servlet-name>
        <url-pattern>/ConnexionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InscriptionServlet</servlet-name>
        <url-pattern>/InscriptionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SuppressionServlet</servlet-name>
        <url-pattern>/SuppressionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DemandeServlet</servlet-name>
        <url-pattern>/DemandeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HistoriqueDemandeServlet</servlet-name>
        <url-pattern>/HistoriqueDemandeServlet</url-pattern>
    </servlet-mapping>


