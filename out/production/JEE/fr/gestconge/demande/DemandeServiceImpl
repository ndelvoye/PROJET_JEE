package fr.gestconge.demande;

import java.time.LocalDate;
import java.util.List;

public class DemandeServiceImpl implements DemandeService {

    private DemandeDAO demandeDao = new DemandeDAOImpl();

    public List<Demande> getAllDemande(){
        return demandeDao.findByAll();
    }

    public List<Demande> getDemandeById(Integer id){
        return demandeDao.findById(id);
    }

    public List<Demande> getDemandeByEtat(Integer etat){
        return demandeDao.findByEtat(etat);
    }

    public List<Demande> getDemandeByDateDebut(LocalDate dateDebut){
        return demandeDao.findByDateDebut(dateDebut);
    }

}
